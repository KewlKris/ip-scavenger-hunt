{ 
    "name": "IP Scavenger Hunt",
    "description": "Get a taste of the interconnected web! Try to connect to servers from all around the globe!",
    "version": "1.0.0",
    "manifest_version": 2,
    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },
    "permissions": [
        "webRequest",
        "storage",
        "geolocation",
        "<all_urls>"
    ],
    "browser_action": {
        "default_popup": "popup.html"
    }
}